    <insert tableName="permission">
      <column name="name" value="intake-core-county"/>
    </insert>
    <insert tableName="permission">
      <column name="name" value="cals-core-user"/>
    </insert>
    <insert tableName="permission">
      <column name="name" value="cals-core-county"/>
    </insert>
